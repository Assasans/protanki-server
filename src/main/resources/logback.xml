<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>[%date{HH:mm:ss.SSS}] [%logger/%level]: %message%n</pattern>
    </encoder>
  </appender>

  <root level="TRACE">
    <appender-ref ref="STDOUT" />
  </root>

  <logger name="org.hibernate" level="INFO" />
  <!-- Non-fixable HHH90000021 deprecation warning -->
  <logger name="org.hibernate.orm.deprecation" level="ERROR" />
  <logger name="org.jboss" level="INFO" />
  <logger name="com.zaxxer.hikari" level="INFO" />
  <logger name="org.mariadb.jdbc" level="INFO" />
  <logger name="io.netty" level="INFO" />
  <logger name="ktor.application" level="INFO" />

  <logger name="jp.assasans.protanki.server.commands.handlers.BattleHandler" level="DEBUG" />
  <logger name="jp.assasans.protanki.server.resources.ResourceServer" level="DEBUG" />
</configuration>
